<nav class="navbar navbar-expand-sm navbar-light navbarCustom">

  <!--a link to hold my brand image-->
  <a id="logo" class="navbar-brand mr-5">
    <i class="far fa-copyright fa-lg "></i>CLA Tracker
  </a>

  <!--a button displays when the navbar collapses-->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <!--div to hold all the items in the navbar -- its id is referencence as data
  target for the button above...so when navbar collapses it shows the same
  items as a list-->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <!--unordered list of items for the navbar, mr-auto ml-auto centralises content in reaining space after logo-->
    <ul class="navbar-nav ml-5 mr-auto">
      <%for(var i=0;i<links.length;i++){%>
        <!--add active to the class name if link active attribute is true-->
        <li class="nav-item <%if(links[i].active){%>active<%}%>">
          <a class="nav-link" href=<%=links[i].url%>><%=links[i].label%>
            <span class="sr-only">(current)</span></a>
        </li>
      <%}%>
    </ul>
    <ul class="navbar-nav ml-auto">
      <!--links that we want right aligned on navbar-->
        <li class="nav-item">
          <%if(loggedIn == false){%>
            <a class="btn btn-block btn-social btn-github" href='/login/github'>
              <span class="fab fa-github"></span> Sign in with Github
            </a>
          <%} else {%>
            <a class="nav-link" href="/login/logout">
              <img class="mr-2 rounded-circle" src=<%=profilePicture%> width="40" height="40">Log Out
            </a>
          <%}%>
        </li>
    </ul>
  </div>
</nav>
